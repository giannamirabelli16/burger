<div class="text-center">
  <h1>EAT-DA-BURGER!</h1> 
    <img src="../public/assets/img/baconBurger1.gif" class="" alt="burgerImage">
    <img src="../public/assets/img/baconBurger2.gif" class="" alt="burgerImage">
    <img src="../public/assets/img/baconBurger3.gif" class="" alt="burgerImage">
    <img src="../public/assets/img/baconBurger4.gif" class="" alt="burgerImage">
    <img src="../public/assets/img/baconBurger5.gif" class="" alt="burgerImage">
    <img src="../public/assets/img/baconBurger6.gif" class="" alt="burgerImage">
</div>

<div class='container-fluid full-width' id='main'>
  <div class='row'>
    <div class='col-sm-4 col-sm-offset-2'>
      <h2>Hot and Ready</h2>
      {{#each burgers}}
        {{#unless this.devoured}}
          <div class='well'>{{this.id}}: {{this.burger_name}}
            <form class='eat' action='/api/{{this.id}}?_method=PUT' method='POST'>
              <input type='hidden' name='name' value='true'>
              <button type='submit'>Bon Appetit!</button>
            </form>
          </div>
        {{/unless}}
      {{/each}}
    </div>
  
    <div class='col-sm-4'>
      <h2>Devoured</h2>
      {{#each burgers}}
        {{#if this.devoured}}
          <div class='well well-sm'>{{this.id}}: {{this.burger_name}}</div>
        {{/if}}
      {{/each}}
    </div>
  </div>

  <div class='row'>
    <div class='col-sm-4 col-sm-offset-4'>
      <h2>Order Here</h2>
      <form action='/api/' method='POST'>
        <input type='text' name='name'>
        <button type='submit'>Craft A Burger!</button>
      </form>
    </div>
  </div>
</div>




